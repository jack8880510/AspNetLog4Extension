<?xml version="1.0" encoding="UTF-8"?>
<log4net debug="true">
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value="log/runtime.log" />
        <param name="Encoding" value="utf-8" />
        <param name="AppendToFile" value="true" />
        <param name="RollingStyle" value="Date" />
        <param name="DatePattern" value="yyyyMMdd" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c.%M %m%n" />
        </layout>
    </appender>
    <appender name="ADONetAppender" type="MicroKnights.Logging.AdoNetAppender, MicroKnights.Log4NetAdoNetAppender">
        <!--日志缓存写入条数 设置为0时只要有一条就立刻写到数据库-->
        <bufferSize value="0" />
        <!--日志数据库连接串-->
        <connectionType value="System.Data.SqlClient.SqlConnection,System.Data,Version=4.0.0.0,Culture=neutral,PublicKeyToken=b77a5c561934e089" />
        <connectionStringName value="log4net" />
        <connectionStringFile value="appsettings.json" />
        <!--日志数据库脚本-->
        <commandText value="INSERT INTO [dbo].[error_log](id, log_level, error_time, error_type, error_log, error_transno, error_data, thread, logger, exception) VALUES(newid(), @log_level, @error_time, 1, @error_log, 123, @error_data, @thread, @logger, @exception)" />
        <!--日志时间LogDate -->
        <parameter>
            <parameterName value="@error_time" />
            <dbType value="DateTime" />
            <layout type="log4net.Layout.RawTimeStampLayout" />
        </parameter>
        <!--线程号-->
        <parameter>
            <parameterName value="@thread" />
            <dbType value="String" />
            <size value="100" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%t" />
            </layout>
        </parameter>
        <!--日志类型LogLevel -->
        <parameter>
            <parameterName value="@log_level" />
            <dbType value="String" />
            <size value="200" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%p" />
            </layout>
        </parameter>
        <!--日志名称-->
        <parameter>
            <parameterName value="@logger" />
            <dbType value="String" />
            <size value="500" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%logger" />
            </layout>
        </parameter>
        <parameter>
            <parameterName value="@error_log" />
            <dbType value="String" />
            <size value="3000" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%message" />
            </layout>
        </parameter>
        <parameter>
            <parameterName value="@exception" />
            <dbType value="String" />
            <size value="99999" />
            <layout type="log4net.Layout.ExceptionLayout" />
        </parameter>
        <parameter>
            <parameterName value="@error_data" />
            <dbType value="String" />
            <size value="99999" />
            <layout type="Example.CustomerLogLayout, Example">
                <conversionPattern value="%property{ErrorData}" />
            </layout>
        </parameter>
    </appender>
    <root>
        <level value="ALL" />
        <!--<level value="ERROR" />-->
        <appender-ref ref="LogFileAppender" />
        <appender-ref ref="ADONetAppender" />
    </root>
</log4net>